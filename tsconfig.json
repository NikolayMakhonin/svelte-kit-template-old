{
  "extends": "./.svelte-kit/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "@types/**/*",
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",

    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "isolatedModules": false,
    "declaration": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "newLine": "LF",

    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],

    "lib": [
      "DOM",
      "ES2020",
      "WebWorker"
    ]
  }
}
